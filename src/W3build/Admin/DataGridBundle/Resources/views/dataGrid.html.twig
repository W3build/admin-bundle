<div class="data-grid">
    <strong class="num-records">{% trans %}TotalRecords{% endtrans %}: {{ dataGrid.getTotalResults() }}</strong>
    <form class="form-inline">
        <table class="table table-responsive">
            <thead>
                <tr>
                    {% for column in dataGrid.getColumns() %}
                        <th>{{ column.getLabel() }}</th>
                    {% endfor %}
                    {% if dataGrid.getActions|length > 0 %}
                        <th class="actions">{{ dataGrid.getActionLabel() }}</th>
                    {% endif %}
                </tr>
            </thead>
            <tbody>
                {% for row in dataGrid.getResults() %}
                <tr class="selectable">
                    {% for column in dataGrid.getColumns() %}
                    <td>{{ include(template_from_string(column.getData())) }}</td>
                    {% endfor %}
                    {% if dataGrid.getActions|length > 0 %}
                    <td>
                        {% for action in dataGrid.getActions() %}
                            {{ data_grid_action(action) }}
                        {% endfor %}
                    </td>
                    {% endif %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="clearfix"></div>
    </form>
</div>